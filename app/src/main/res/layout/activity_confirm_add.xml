<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".confirm_add"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="129dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#28527A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-6dp"
                android:text="Ajouter"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Vous devez remplir ce formulaire pour valider l'ajout"
                android:textColor="#F4D160"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <EditText
            android:id="@+id/fulln"
            android:drawableRight="@drawable/user_icon_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Nom et Prénom"
            android:inputType="textPersonName"
            android:textColor="#28527A"
            android:textColorHint="#5A5F68" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText5"
                android:drawableRight="@drawable/email_icon_form"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#28527A"
                android:textColorHint="#5A5F68" />

            <EditText
                android:id="@+id/editText6"
                android:drawableRight="@drawable/phone_icon_form"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:hint="Téléphone"
                android:inputType="phone"
                android:textColor="#28527A"
                android:textColorHint="#5A5F68" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText8"
            android:drawableRight="@drawable/address_icon_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Adresse"
            android:inputType="textPostalAddress"
            android:textColor="#28527A"
            android:textColorHint="#5A5F68" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText7"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:hint="Numéro CIN"
                android:inputType="number"
                android:textColor="#28527A"
                android:textColorHint="#5A5F68"
                android:drawableRight="@drawable/card_from"/>

            <EditText
                android:id="@+id/date_naissance"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:hint="Date de naissance"
                android:text="enter date naissance"
                android:inputType="date"
                android:textColor="#28527A"
                android:textColorHint="#5A5F68"
                android:drawableRight="@drawable/arrow_down"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Qualification"
            android:textColor="#28527A"
            android:textColorHint="#5A5F68" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Date embauche"
            android:inputType="date"
            android:textColor="#28527A"
            android:textColorHint="#5A5F68"
            android:drawableRight="@drawable/arrow_down"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:checked="true"
            android:text="Opérateur direct"
            android:textColor="#28527A" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="148dp"
        android:layout_height="49dp"
        app:layout_constraintHorizontal_bias="0.8"

        android:background="@drawable/custom_button"

        android:text="Valider"
        android:textColor="@color/azra"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:textSize="18dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
